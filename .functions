# Tmux {{{

# Crate and attach a new session with args
# defaults: session named "new" in ${HOME} dir with window named "main"
tnew() {
    local session_name="${1:-new}"
    local session_dir=${2:-~/}
    local session_window_name="${3:-main}"

    tmux new-session \
        -d \
        -s ${session_name} \
        -c ${session_dir} \
        -n ${session_window_name}
}
