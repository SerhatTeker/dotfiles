# cd then ll
cdl() {
	builtin cd "$@" && ls -ahlF
}

# make dir then cd
mkcd () {
	mkdir -p "$1" && cd "$1"
}

# shortcut : cd $DIR then run nvim -s
cv () {
    # takes first argument as $DIR
    _ARG="$@"
    _DIR="$HOME"

    if [ "$_ARG" = "dot" ]; then
        _DIR=$DOTFILES_DIR
    elif [ "$_ARG" = "bak" ]; then
        _DIR=$SYSTEM_BAK_DIR
    else
        _DIR=$_ARG
    fi

    builtin cd "$_DIR" && nvim -S
    # builtin cd "$@" && nvim -S
}

