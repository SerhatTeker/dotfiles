	mkdir -p "$1" && cd "$1"
}

# shortcut : cd $DIR then run nvim -s
cv () {
    # takes first argument as $DIR
    _ARG="$@"
    _DIR="$HOME"

    if [ "$_ARG" = "dot" ]; then
        _DIR=$DOTFILES_DIR
    elif [ "$_ARG" = "bak" ]; then
        _DIR=$SYSTEM_BAK_DIR
    else
        _DIR=$_ARG
    fi

    builtin cd "$_DIR" && nvim -S
    # builtin cd "$@" && nvim -S
}

# Zip Tar {{{2

tar-it () {
	dirorfile="$1"
	destination="$1.tar.gz"

	tar -czvf $destination $dirorfile
}

untar-it () {
	file="$1"
	filename="${file%%.*}"

	# alternative to get the filename
	# filename=$(basename -- "$fullfile")
	# extension="${filename##*.}"
	# filename="${filename%.*}"

	tar -xzvf $file $filename
}

unzip-it () {
    zipfile="$1"
    zipdir=${1%.zip}

    unzip -d "$zipdir" "$zipfile"
}

extract-it() {
	# With the above code in your .bashrc, typing an x followed by a filename will
	# extract most archives you come across (assuming you have the packages needed to
	# extract that type of archive).
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xvjf $1    ;;
			*.tar.gz)    tar xvzf $1    ;;
			*.bz2)       bunzip2 $1     ;;
			*.rar)       unrar x $1     ;;
			*.gz)        gunzip $1      ;;
			*.tar)       tar xvf $1     ;;
			*.tbz2)      tar xvjf $1    ;;
			*.tgz)       tar xvzf $1    ;;
			*.zip)       unzip $1       ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1        ;;
			*)           echo "Unable to extract '$1'" ;;
		esac
	else
			echo "'$1' is not a valid file"
	fi
}
