zip-it() {
    local input="${1}"
    local output="${1%%.*}.zip"

    if [[ -d "${input}" ]]; then
        zip -r "${output}" "${input}"
    elif [[ -f "${input}" ]]; then
        zip "${output}" "${input}"
    else
        echo "${input} is not valid"
        return 1
    fi
}

