# hash two files and compare their hashes
check-hsum() {
    echo "$(shasum -a 256 $1)"
    echo "$(shasum -a 256 $2)"
    if [[ "$(shasum -a 256 $1 | awk '{print $1}')" == "$(shasum -a 256 $2 | awk '{print $1}')" ]]; then
        echo "Equal"
    else
        echo "NOT equal"
    fi
}

# hsum alternative
ecmp() {
    if cmp -s "$1" "$2"; then
        echo "eq"
    else
        echo "neq"
    fi
}
