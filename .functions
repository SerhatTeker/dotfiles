# Zip Tar {{{

tar-it () {
	dirorfile="$1"
	destination="$1.tar.gz"

	tar -czvf $destination $dirorfile
}

untar-it () {
	file="$1"
	filename="${file%%.*}"

	# alternative to get the filename
	# filename=$(basename -- "$fullfile")
	# extension="${filename##*.}"
	# filename="${filename%.*}"

	tar -xzvf $file $filename
}

unzip-it () {
    zipfile="$1"
    zipdir=${1%.zip}

    unzip -d "$zipdir" "$zipfile"
}

extract-it() {
    # typing extract-it followed by a filename will extract most archives you
    # come across (assuming you have the packages needed to extract that type
    # of archive).
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xvjf $1    ;;
			*.tar.gz)    tar xvzf $1    ;;
			*.bz2)       bunzip2 $1     ;;
			*.rar)       unrar x $1     ;;
			*.gz)        gunzip $1      ;;
			*.tar)       tar xvf $1     ;;
			*.tbz2)      tar xvjf $1    ;;
			*.tgz)       tar xvzf $1    ;;
			*.zip)       unzip $1       ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1        ;;
			*)           echo "Unable to extract '$1'" ;;
		esac
	else
			echo "'$1' is not a valid file"
	fi
}
