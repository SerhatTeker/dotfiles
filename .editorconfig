# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{rst,ini}]
indent_style = space
indent_size = 4

[*.{html,css,scss,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[nginx.conf]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
line_length=120
multi_line_output=3

[*.go]
indent_style = tab
indent_size = 8
