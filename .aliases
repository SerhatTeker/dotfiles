# some more ls aliases
alias ll='ls -ahlF'
alias la='ls -A'
alias l='ls -CF'
# show all files
alias lsf='ls -p | grep -v /'
# show all symbolic links
alias fln='ls -la . | grep "\->"'
# show all regular files
alias laf='ls -lAhp | grep -v /'
# watch
alias wad='watch -d ls -lAh'
