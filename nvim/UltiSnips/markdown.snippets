# hugo-notice
snippet hugo-notice "hugo notice {note, warning, tip, info}" b
{{< notice $1 >}}
$2
{{< /notice >}}

$0
endsnippet

# shortcode
snippet hugo-shortcode "Hugo shortcode" b
{{< $1 >}}
$0
endsnippet

# tweet shortcode
snippet hugo-tweet "Hugo tweet shortcode" b
{{< tweet $1 >}}
$0
endsnippet

