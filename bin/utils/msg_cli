#!/usr/bin/env bash
# -*- coding: utf-8 -*-
# vim: set ft=sh et ts=4 sw=4 sts=4:

# Helper function bin to stdout message colorful


COLOR_NONE="\e[0m"
COLOR_WHITE="\e[1;37m"
COLOR_RED="\e[0;31m"
COLOR_BLUE="\e[0;34m"
COLOR_GREEN="\e[0;32m"
COLOR_YELLOW="\e[1;33m"
COLOR_BROWN="\e[0;33m"
COLOR_PINK="\e[0;35m"
COLOR_CYAN="\e[0;36m"
COLOR_PURPLE="\e[0;35m"
COLOR_BLACK="\e[0;30m"
COLOR_LIGHTGRAY="\e[0;37m"
COLOR_DARKGRAY="\e[1;30m"
COLOR_LIGHTBLUE="\e[1;34m"
COLOR_LIGHTGREEN="\e[1;32m"
COLOR_LIGHTCYAN="\e[1;36m"
COLOR_LIGHTRED="\e[1;31m"
COLOR_LIGHTPURPLE="\e[1;35m"


_color=$1
message=$2


case $_color in
    b|blue) color=${COLOR_BLUE} ;;
    g|green) color=${COLOR_GREEN} ;;
    y|yellow) color=${COLOR_YELLOW} ;;
    r|red) color=${COLOR_RED} ;;
    c|cyan) color=${COLOR_CYAN} ;;
    p|purple) color=${COLOR_PURPLE} ;;
    *) color=${COLOR_WHITE} ;;
esac

echo -e "${color}------------------------------- ${message} -------------------------------${COLOR_NONE}"
