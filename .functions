# compare files {{{2

# hash two files and compare their hashes
hsum() {
	echo "$(sha1sum $1) | $(sha1sum $2)"
	if [[ "$(sha1sum $1 | awk '{print $1}')" == "$(sha1sum $2 | awk '{print $1}')" ]]; then
		echo "equal"
	else
		echo "not equal"
	fi
}

# hsum alternative
ecmp() {
	if cmp -s "$1" "$2"; then
		echo "eq"
	else
		echo "neq"
	fi
}
